<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.javalec.ex.Dao.PDao">

	<select id="Plist"
		resultType="com.javalec.ex.Dto.PDto.ProductDto">
		select * from product
	</select>
	<select id="Plist2"
		resultType="com.javalec.ex.Dto.PDto.ProductDto">
		select * from product where p_category=#{param1}
	</select>
	<select id="list_category"
		resultType="com.javalec.ex.Dto.PDto.ProductDto">
		select * from product where p_category=#{param1}
	</select>
	<select id="productDetail"
		resultType="com.javalec.ex.Dto.PDto.ProductDto">
		select * from PRODUCT where P_CODE=#{param1}
	</select>
	<select id="p_review" resultType="com.javalec.ex.Dto.CDto.P_ReviewDto">
		<![CDATA[select * from (select rownum rnum,pr_num,p_code,id,pr_title,pr_content,pr_file,pr_score,pr_hit,pr_wdate
		from (select * from p_review ec where p_code=#{param1} order by pr_wdate desc))
        product where rnum>=#{param2} and rnum<=#{param3}]]>
	</select>
	<select id="c_review" resultType="com.javalec.ex.Dto.CDto.C_ReviewDto">
		<![CDATA[select * from (select rownum rnum,cr_num,p_code,id,cr_title,cr_content,cr_score,cr_hit,cr_wdate
		from (select * from c_review ec where p_code=#{param1} order by cr_wdate desc))
        product where rnum>=#{param2} and rnum<=#{param3}]]>
	</select>
	<select id="pfnq_review" resultType="com.javalec.ex.Dto.PDto.P_FnqDto">
		select id, pf_title, pf_content, pf_secret , pf_answer , pf_wdate from p_fnq
		where p_code=#{param1} order by pf_wdate asc
	</select>
	<select id="getListCount" resultType="Integer">
		select count(*) as count from p_review where p_code =#{param1}
	</select>
	
	
	
	<!-- 관리자   -->
	
	<!-- 관리자 상품 리스트 보기 -->
	<select id="list" resultType="com.javalec.ex.Dto.PDto.ProductDto">
		select * from product  where p_delflag = 'N' order by p_code desc
	</select>

	<!-- 관리자 상품 등록 -->
	<insert id="write" parameterType="com.javalec.ex.Dto.PDto.ProductDto">
		insert into product	values(PRODUCT_SEQ.nextval,#{p_category},#{p_case},#{p_case2},#{p_name},#{p_price},#{p_point},#{p_producer},#{p_expiry},#{p_type},#{p_capacity},
		#{p_detail},#{p_location},#{p_gene},#{p_import},#{p_stock},#{p_img1},#{p_img2},#{p_img3},#{p_content_img},sysdate,sysdate,#{p_delflag})
	</insert>
	 
	<!-- 제품 하나의 정보  -->
	<select id="getProductInfo" resultType="com.javalec.ex.Dto.PDto.ProductDto" parameterType="Integer">
		select * from product where p_code = #{p_code}
	</select>
	
	<!-- 관리자 상품 수정 -->
	<update id="modify" parameterType="com.javalec.ex.Dto.PDto.ProductDto">
		update product set p_category=#{p_category},p_case=#{p_case},p_case2=#{p_case2},p_name=#{p_name},p_price=#{p_price},p_point=#{p_point},p_producer=#{p_producer},p_expiry=#{p_expiry},p_type=#{p_type},
		p_capacity=#{p_capacity},p_detail=#{p_detail},p_location=#{p_location},p_gene=#{p_gene},p_import=#{p_import},p_stock=#{p_stock},
		p_img1=#{p_img1},p_img2=#{p_img2},p_img3=#{p_img3},p_content_img=#{p_content_img},p_udate=sysdate where p_code = #{p_code}
	</update>

	<!-- 상품 삭제처리 -->
	<delete id="delete">
		delete from product where p_code = #{p_code}
	</delete>



</mapper>